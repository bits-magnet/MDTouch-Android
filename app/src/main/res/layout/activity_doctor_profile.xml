<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#a19f9f"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hsc.mdtouch.DoctorProfile"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/doctor_toolbar"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:src="@mipmap/doctor"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"

                />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"

                />

            <TextView
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/qualification"
                android:textColor="#9c9a9a"
                android:gravity="center"
                android:textSize="16sp"

                />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/specialization"
                android:textColor="#9c9a9a"
                android:gravity="center"
                android:textSize="16sp"

                />

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/experience"
                android:textColor="#9c9a9a"
                android:gravity="center"
                android:textSize="16sp"

                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="#ece7e7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Hospital"
                />

            <TextView
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hospital"
                />


        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        card_view:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#000"
                >

                <TextView
                    android:onClick="Appointments"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appointments"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="18dp"
                    />

                <TextView
                    android:onClick="YourPatients"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Patients"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="18dp"
                    />

                <TextView
                    android:onClick="ChatDoctors"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chat Doctors"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="18dp"
                    />

                <TextView
                    android:onClick="MedicalServices"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medical Services"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="18dp"
                    />

            </LinearLayout>


        </ScrollView>


    </android.support.v7.widget.CardView>


</LinearLayout>
