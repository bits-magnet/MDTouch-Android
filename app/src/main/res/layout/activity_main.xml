<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2b2a2a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="30dp"
        android:src="@drawable/main">

    </ImageView>

    <TextView
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:text="MDTouch"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="28sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:background="#000"
            android:id="@+id/patientlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/patientimage"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:src="@drawable/patient" />

            <TextView
                android:id="@+id/patienttext"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Login as Patient"
                android:textColor="#ff00ff00"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="OR"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/doctorlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/doctorimage"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:src="@mipmap/doctor" />

            <TextView
                android:id="@+id/doctortext"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Login as Doctor"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColorHint="#fff"
        >

        <EditText
            android:inputType="textPersonName"
            android:id="@+id/username"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#FFFFFF"
            />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginStart="20dp"
        android:textColor="#8f7d7d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note - Username is Case Sensitive."
        />

    <android.support.design.widget.TextInputLayout
        android:textColorHint="#fff"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password">


        <EditText
            android:id="@+id/password"
            android:maxLines="1"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/doctor_login"
        android:textStyle="bold"
        android:background="@drawable/circular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="LOGIN"
        android:textSize="16sp"
        android:textColor="#000000"
        />

    <TextView
        android:onClick="ForgetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Forgot Your Password?"
        android:textColor="#FFFFFF"
        android:textSize="18sp"

        />

    <TextView
        android:onClick="Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Don't Have Account? Register."
        android:textColor="#FFFFFF"
        android:textSize="16sp"

        />

    </LinearLayout>
