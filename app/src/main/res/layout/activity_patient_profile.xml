<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hsc.mdtouch.Profile"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/patient_toolbar"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/patient"
                />

            <TextView
                android:textAllCaps="true"
                android:id="@+id/name"
                android:layout_marginTop="6dp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#fff"
                />

            <TextView
                android:id="@+id/number"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                />

            <ProgressBar
                android:progressDrawable="@color/green"
                android:background="#fff"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                style="?android:attr/progressBarStyleHorizontal"
                />

            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7 %"
                android:textColor="#fff"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/viewprofile"
                android:background="@drawable/complete_profile"
                android:layout_gravity="center"
                android:padding="12dp"
                android:layout_marginTop="14dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Your Profile"
                android:layout_marginBottom="14dp"
                android:onClick="viewProfile"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="#ece7e7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MDTouch Drive"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A secure space for all your appointments details, medical records and your medical problems."
                />

            <TextView
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How we keep your data secure?"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        card_view:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#000"
                >

                <TextView
                    android:onClick="MyDoctors"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Doctors"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="18dp"
                    />

                <TextView
                    android:onClick="Appointments"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appointments"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="18dp"
                    />

                <TextView
                    android:onClick="MedicalRecords"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medical Records"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="18dp"
                    />

                <TextView
                    android:onClick="MedicalServices"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medical Services"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="18dp"
                    />

                <TextView
                    android:onClick="Events"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="18dp"
                    />


            </LinearLayout>


        </ScrollView>


    </android.support.v7.widget.CardView>


</LinearLayout>
